---

// IMPORT ASTRO LAYOUTS
import Container from "@/layouts/container-shiva/index.astro"

// IMPORT ASTRO ATOMS
import ButtonHoverWhite from "@/atoms/atoms-shiva/button/hover-white/index.astro"
import HeadingOnewhite from "@/atoms/atoms-shiva/headings/one/seven-xl/semibold/white/index.astro"

// GET ASTRO PROPS
const {

    background_image,
    button_link,
    button_text,
    title_one,
    title_two,

} = Astro.props

---

<section class={`h-[80vh] md:h-dvh flex flex-col pt-32 bg-cover bg-center bg-no-repeat ${ background_image}`}>
    <Container>
        <div class="flex flex-col justify-center h-full gap-6">
            <div>
                <HeadingOnewhite>{ title_one }</HeadingOnewhite>
                <HeadingOnewhite>{ title_two }</HeadingOnewhite>
            </div>
            <a href={ button_link }>
                <ButtonHoverWhite>{ button_text }</ButtonHoverWhite>
            </a>
        </div>
    </Container>
</section>
